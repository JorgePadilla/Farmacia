<h1>Log In</h1>
<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email, "Email" %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password, "Password" %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= submit_tag "Login" %>
  </div>
<% end %>
